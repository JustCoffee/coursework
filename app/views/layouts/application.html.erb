        	<li><a href="/resourses/add_resourses"><strong>Настройки профиля</strong></a></li>
        <% end %>
        <% if !user_signed_in? %>
          <li><a href="<%= new_user_session_path %>"><strong>Вход</strong></a></li>
        <% end %>
<!-- <li></li> -->
      	<% if user_signed_in? %>
        	<li><a href="<%= destroy_user_session_path %>" data-method="delete"><strong>Выход</strong></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div style="text-align: center">
<%= yield %>
</div>
